#include <iostream>
#include <conio.h>
#include <windows.h>
using namespace std;
main()
{
    int pilihan,a,b,c;


        cout<<"========DAFTAR PILIHAN========";
        cout<<"\n1.PROGRAM JENIS SEGITIGA\n2.KELUAR\n";
        cout<<"Masukan Pilihan 1/2 : "; cin>>pilihan;

switch(pilihan)
{   case 1:
        system("cls");
        cout<<"PROGRAM JENIS SEGITIGA";
        cout<<"\n\nMASUKAN SISI A : "; cin>>a;
        cout<<"MASUKAN SISI B : "; cin>>b;
        cout<<"MASUKAN SISI C : "; cin>>c;
        if(a==b && b==c)
            cout<<"SEGITIGA SAMA KAKI";
        else if(a==b || b==c || c==a)
            cout<<"SEGITIGA SAMA SISI";
        else
            cout<<"SEGITIGA SEMBARANG";
        break;
    case 2:
        system("cls");
        cout<<"TRIMAKASIH SUDAH BERKUNJUNG";

}
    getch();
    return 0;
}

